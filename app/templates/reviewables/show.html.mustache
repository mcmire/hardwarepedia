
<p>{{back_to_reviewables_link}}</p>

<p>{{breadcrumb}}</p>

{{#reviewable}}

  <h1>{{full_name}}</h1>

  <h2>Content URLs:</h2>

  <ul>
    {{#content_urls}}
      <li>{{{linked_url}}}</li>
    {{/content_urls}}
  </ul>

  {{#chipset?}}
    <p><i>(This is a chipset)</i></p>
    <p>Implementations:</p>
    <ul>
      {{#implementations}}
        <li>{{{linked_full_name}}}</li>
      {{/implementations}}
    </ul>
  {{/chipset?}}

  {{#chipset}}
    <p><b>Chipset:</b> {{{linked_full_name}}}</p>
  {{/chipset}}

  {{#has_prices?}}
    <h2>Prices</h2>
    {{#prices_grouped_by_site}}
      <h3>{{site_name}}</h3>
      <ul>
        {{#prices}}
          <li>
            <b>{{formatted_created_at}}</b>: {{formatted_amount}}
          </li>
        {{/prices}}
      </ul>
    {{/prices_grouped_by_site}}
  {{/has_prices?}}

  {{#has_ratings?}}
    <h2>Ratings</h2>
    {{#ratings_grouped_by_site}}
      <h3>{{site_name}}</h3>
      <ul>
        {{#ratings}}
          <li>
            <b>{{formatted_created_at}}</b>: {{formatted_value}}
          </li>
        {{/ratings}}
      </ul>
    {{/ratings_grouped_by_site}}
  {{/has_ratings?}}

  {{#has_images?}}
    <h2>Images</h2>
    <ul>
      {{#images}}
        <li>{{{img_tag}}}</li>
      {{/images}}
    </ul>
  {{/has_images?}}

  {{#has_specs?}}
    <h2>Specs</h2>
    <table id="specs">
      {{#specs}}
        <tr>
          <th class="name">{{name}}</th>
          <td class="value">{{value}}</th>
        </tr>
      {{/specs}}
    </table>
  {{/has_specs?}}

{{/reviewable}}
